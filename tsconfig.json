{
	"compilerOptions": {
		"incremental": false,
		"noImplicitAny": true,
		"module": "es6",
		"target": "es2017",
		"lib": ["es5", "es6", "dom", "dom.iterable", "esnext"],
		"jsx": "react",
		"allowJs": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"declaration": true,
		"rootDir": "src",
		"strict": true,
		"strictNullChecks": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"outDir": "./build",
		"rootDirs": ["src", "node_modules"],
		"types": ["react", "react-dom", "node", "jest", "@testing-library/jest-dom"],
		"plugins": [],
		"noErrorTruncation": true
	},
	"include": ["src/**/*"]
}
